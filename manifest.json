{
  "manifest_version": 3,
  "name": "LabRat - Research Assistant",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "storage",
    "sidePanel"
  ],
  "host_permissions": [
    "http://localhost:8000/*"
  ],
  "side_panel": {
    "default_path": "main.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [{
    "matches": ["*://*.snowflakecomputing.com/*", "*://app.snowflake.com/*"],
    "js": ["assistant.js"]
  }],
  "action": {
    "default_title": "Open LabRat Assistant"
  }
}